<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.bessie.bessie.MainActivity"
    android:background="#F48FB1">




    <ImageView
        android:layout_width="305dp"
        android:layout_height="290dp"
        android:scaleType="fitCenter"
        android:src="@drawable/bb"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Happy BirthDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="May your day be filled with Joy"
        android:textSize="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hope you have an awesome day!"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textColor="#F3E5F5"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I wish you all the happiness in the world!"
        android:textSize="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView4" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Hereâ€™s to another year of success, health and happiness"
    android:textSize="@dimen/activity_horizontal_margin"
    android:textColor="#F3E5F5"
    android:layout_below="@+id/textView4"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:id="@+id/textView5" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="HBD 2 U"
    android:textSize="35sp"
    android:textStyle="italic"
    android:id="@+id/textView6"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:src="@drawable/dd"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_toRightOf="@+id/textView6"
        android:id="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dear: Special Someone"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />
</RelativeLayout>
